<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/aqua_blue_dark</item>
        <item name="colorPrimaryDark">@color/aqua_blue_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorPrimary">@color/text_black</item>
        <item name="android:textColorSecondary">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColorLink">@color/color_accent</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
    </style>

</resources>
